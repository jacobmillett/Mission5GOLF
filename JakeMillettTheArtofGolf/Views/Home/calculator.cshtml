<div class="container">
    <h1 class="text-center">Tutoring Calculator</h1>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <!-- Input field for the number of hours -->
            <div class="form-group">
                <label for="hours">Number of hours:</label>
                <input type="number" class="form-control" id="hours" min="0" step="1" required />
            </div>
            <!-- Non-editable box for the hourly rate -->
            <div class="form-group">
                <label>Hourly rate:</label>
                <input type="text" class="form-control" value="$475" readonly />
            </div>
            <!-- Button to calculate the total -->
            <button id="calculate-btn" class="btn btn-primary">Calculate</button>
            <!-- Output box to display the total -->
            <div class="form-group mt-3">
                <label for="total">Total:</label>
                <input type="text" class="form-control" id="total" readonly />
            </div>
            <!-- Navigation link/button back to the home page -->
            <a href="/" class="btn btn-secondary">Back to Home</a>
        </div>
    </div>
</div>
